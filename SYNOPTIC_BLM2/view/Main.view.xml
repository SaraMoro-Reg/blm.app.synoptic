<?xml version="1.0" encoding="UTF-8"?>
<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:MicroChart="sap.suite.ui.microchart" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="synoptic.controller.Main" height="100%">
	<App backgroundImage="images/sfondo.jpg" backgroundOpacity="0.1">
		<pages>
			<NavContainer id="navContainerId" width="100%" height="100%" class="navContainerControl sapUiSmallMarginBottom">
				<Page id="p1">
					<customHeader>
						<Bar class="customBackGround">
							<contentLeft>
								<Button icon="sap-icon://nav-back" press="handleBackPress" class="whiteIcon" />
								<Image width="16%" src="images/logo.jpg" densityAware="false">
									<layoutData>
										<FlexItemData growFactor="1" />
									</layoutData>
								</Image>
							</contentLeft>
							<contentMiddle>
								<Label id="labelTime" text="" class="pageTitleStyle whiteFont" />
							</contentMiddle>
							<contentRight>
								<Label text="{/user/0/Name}" class="whiteFont" />
								<Avatar initials="{/user/0/AVATAR}" displaySize="XS" showBorder="false" press=".onAvatarPressed" backgroundColor="Accent1" class="sapUiTinyMarginEnd" />
								<!-- <Button icon="sap-icon://person-placeholder" enabled="false" class="paddingLeft1rem whiteIcon" /> -->
								<!-- <Button icon="sap-icon://log" press="handleLogOff" class="whiteIcon" /> -->
							</contentRight>
						</Bar>
					</customHeader>
					<content>
						<Carousel class="sapUiResponsiveContentPadding" loop="{/automaticScroll}" id="carouselId" pageChanged="onPageChanged" arrowsPlacement="PageIndicator">
							<!-- Carousel 1, Pag 1 -->
							<Page showHeader="false" id="LINEA-SMALL">
								<core:Fragment fragmentName="synoptic.view.pages.pageLineaSmall" type="XML" />
							</Page>
							<!-- Carousel 1, Pag 2 -->
							<Page showHeader="false" id="LINEA-BIG">
								<core:Fragment fragmentName="synoptic.view.pages.pageLineaBig" type="XML" />
							</Page>
						</Carousel>
					</content>
				</Page>
				<!--*******************************************************************************************************-->
				<!--fine prima pagina nav container - inizio seconda pagina nav container-->
				<!--*******************************************************************************************************-->
				<Page id="p2">
					<customHeader>
						<Bar class="customBackGround">
							<contentLeft>
								<Button icon="sap-icon://nav-back" press="handleBackPress" class="whiteIcon" />
								<Image width="16%" src="images/logo.jpg" densityAware="false">
									<layoutData>
										<FlexItemData growFactor="1" />
									</layoutData>
								</Image>
							</contentLeft>
							<contentMiddle>
								<Label id="labelTime2" text="" class="pageTitleStyle whiteFont" />
							</contentMiddle>
							<contentRight>
								<Label text="{/user/0/Name}" class="whiteFont" />
								<Avatar initials="{/user/0/AVATAR}" displaySize="XS" showBorder="false" press=".onAvatarPressed" backgroundColor="Accent1" class="sapUiTinyMarginEnd" />
								<!-- <Button icon="sap-icon://person-placeholder" enabled="false" class="paddingLeft1rem whiteIcon" /> -->
								<!-- <Button icon="sap-icon://log" press="handleLogOff" class="whiteIcon" /> -->
							</contentRight>
						</Bar>
					</customHeader>
					<content>
						<Carousel class="sapUiResponsiveContentPadding" loop="{/automaticScroll}" id="carouselId2" pageChanged="onPageCriticalMaterialChanged" arrowsPlacement="PageIndicator">
							<!-- Carousel 2, Pag 1 -->
							<Page showHeader="false" id="-LINEA-SMALL">
								<core:Fragment fragmentName="synoptic.view.pages.pageLineaSmallCriticalMaterials" type="XML" />
							</Page>
							<!-- Carousel 2, Pag 2 -->
							<Page showHeader="false" id="-LINEA-BIG">
								<core:Fragment fragmentName="synoptic.view.pages.pageLineaBigCriticalMaterials" type="XML" />
							</Page>
						</Carousel>
					</content>
				</Page>
			</NavContainer>
		</pages>
	</App>
</mvc:View>
