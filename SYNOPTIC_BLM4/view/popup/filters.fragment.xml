<?xml version="1.0" encoding="UTF-8"?>
<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" controllerName="synoptic.controller.Main">
	<Dialog title="{i18n&gt;filters}" contentWidth="30%" contentHeight="20%" class="sapUiContentPadding">
		<content>
			<VBox>
			<Text text="{i18n&gt;filterCriticalMat}" class="sapUISmallMargin" width="200px" />
			<MultiComboBox
			         id="filterId"
				selectionChange="handleSelectionChange"
				selectionFinish="handleSelectionFinish"
				width="400px"
				items="{
					path: '/criticalItemsFilterData'
				}">
				<core:Item key="{NAME}" text="{NAME}"/>
			</MultiComboBox>
		        </VBox>
		</content>
		<buttons>
			<Button icon="sap-icon://undo" press="onCloseFilterPopup" type="Reject" class="halfSizeButton" />
			<Button icon="sap-icon://accept" press="onSaveFilterPopup" type="Accept" class="halfSizeButton" />			
		</buttons>
	</Dialog>
</core:FragmentDefinition> 