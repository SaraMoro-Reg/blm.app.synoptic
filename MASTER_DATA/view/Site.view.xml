<?xml version="1.0" encoding="UTF-8"?>
<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:table="sap.ui.table" controllerName="master_data.controller.Site" height="100%" >
	<VBox width="100%" height="100%" renderType="Bare">
		<HBox width="100%" height="7%" renderType="Bare">
			<HBox width="30%" height="100%" renderType="Bare">
				<Button id="btnNewSite" text="{i18n&gt;viewSite.newSite}" tooltip="{i18n&gt;viewSite.newSite}" press="newSite" icon="sap-icon://add" class="sapUiMediumMarginEnd" />
				<Button id="undoNewSite" text="{i18n&gt;viewMainTile.undo}" tooltip="{i18n&gt;viewMainTile.undo}" press="getSite" icon="sap-icon://undo" type="Reject" class="sapUiTinyMarginEnd" />				
				<Button id="btnSaveSite" text="{i18n&gt;viewSite.save}" tooltip="{i18n&gt;viewSite.save}" press="saveNewSite" type="Accept" icon="sap-icon://save" />
			</HBox>
			<HBox width="55%" height="100%" renderType="Bare"/>
			<HBox width="15%" height="100%" renderType="Bare" justifyContent="End" >				
				<Button id="btnRefreshSite" text="{i18n&gt;viewSite.refresh}" tooltip="{i18n&gt;viewSite.refresh}" press="getSite" icon="sap-icon://refresh" />
			</HBox>
		</HBox>
		<HBox width="100%" height="93%" renderType="Bare">
			<table:Table id="tabSite" rows="{path: '/tabSite'}" width="100%" selectionMode="None" visibleRowCountMode="Interactive" >
				<table:rowSettingsTemplate>
					<table:RowSettings highlight="{= ${EDIT} === 'false' ? 'None' : ${DEL} === 'true' ? 'Error' : 'Warning'}" />
				</table:rowSettingsTemplate>
				<table:columns>
					<table:Column width="30%" hAlign="Center" filterProperty="SITE" sortProperty="SITE" >
						<Label text="{i18n&gt;viewSite.site}" />
						<table:template>
							<Input value="{SITE}" tooltip="{SITE}" editable="{=(${NEW_SITE} === 'true')}" width="100%" />
						</table:template>
					</table:Column>
					<table:Column width="60%" hAlign="Center" filterProperty="SITE_DESCR" sortProperty="SITE_DESCR" >
						<Label text="{i18n&gt;viewSite.SiteDescr}" />
						<table:template>
							<Input value="{SITE_DESCR}" tooltip="{SITE_DESCR}" editable="{=(${EDIT} === 'true')}" showValueHelp="{=(${NEW_SITE} === 'false')}" valueHelpOnly="{=(${NEW_SITE} === 'false')}" valueHelpRequest="editSiteDescr" width="100%" />
						</table:template>
					</table:Column>
					<table:Column width="30%" hAlign="Center" filterProperty="SITE" sortProperty="SITE" >
						<Label text="{i18n&gt;viewSite.werks}" />
						<table:template>
							<Input value="{WERKS}" tooltip="{WERKS}" editable="{=(${EDIT} === 'true')}" width="100%" />
						</table:template>
					</table:Column>
					<table:Column width="10%" hAlign="Center" >
						<Label text="{i18n&gt;viewSite.Edit}" />
						<table:template>
							<Button press="editSite" tooltip="{i18n&gt;viewSite.Edit}" type="Transparent" icon="sap-icon://edit" enabled="{=(${NEW_SITE} === 'false')}" iconDensityAware="false" />
						</table:template>
					</table:Column>
					<table:Column width="10%" hAlign="Center" >
						<Label text="{i18n&gt;viewSite.Delete}" />
						<table:template>
							<Button press="deleteSite" tooltip="{i18n&gt;viewSite.Delete}" type="Transparent" icon="sap-icon://delete" iconDensityAware="false" />
						</table:template>
					</table:Column>
				</table:columns>
			</table:Table>
		</HBox>		
	</VBox>
</mvc:View>