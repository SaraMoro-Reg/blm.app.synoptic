<?xml version="1.0" encoding="UTF-8"?>
<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:table="sap.ui.table" xmlns:u="sap.uxap" controllerName="master_data.controller.Site" height="100%">
	<u:ObjectPageLayout id="wkcSitePage" enableLazyLoading="true" showTitleInHeaderContent="false" upperCaseAnchorBar="false" useIconTabBar="true" backgroundDesignAnchorBar="Transparent" showHeaderContent="false" height="100%" class="sapUiNoContentPadding" showFooter="true">
		<!-- Site -->
		<u:ObjectPageSection id="SITE" showTitle="false" >
			<u:ObjectPageSubSection class="customUxapSubsectionNoPadding" >
				<table:Table id="tabSite" rows="{path: '/tabSite'}" width="100%" selectionMode="None" visibleRowCountMode="Interactive" visibleRowCount="13" >
					<table:rowSettingsTemplate>
						<table:RowSettings highlight="{= ${EDIT} === 'false' ? 'None' : ${DEL} === 'true' ? 'Error' : 'Warning'}" />
					</table:rowSettingsTemplate>
					<table:columns>
						<table:Column width="30%" hAlign="Center" filterProperty="SITE" sortProperty="SITE">
							<Label text="{i18n&gt;viewSite.site}" />
							<table:template>
								<Input value="{SITE}" tooltip="{SITE}" editable="{=(${NEW_SITE} === 'true')}" width="100%" />
							</table:template>
						</table:Column>
						<table:Column width="60%" hAlign="Center" filterProperty="SITE_DESCR" sortProperty="SITE_DESCR">
							<Label text="{i18n&gt;viewSite.SiteDescr}" />
							<table:template>
								<Input value="{SITE_DESCR}" tooltip="{SITE_DESCR}" editable="{=(${EDIT} === 'true')}" showValueHelp="{=(${NEW_SITE} === 'false')}" valueHelpOnly="{=(${NEW_SITE} === 'false')}" valueHelpRequest="editSiteDescr" width="100%"  valueHelpIconSrc="sap-icon://globe" />
							</table:template>
						</table:Column>
						<table:Column width="30%" hAlign="Center" filterProperty="SITE" sortProperty="SITE">
							<Label text="{i18n&gt;viewSite.werks}" />
							<table:template>
								<Input value="{WERKS}" tooltip="{WERKS}" editable="{=(${EDIT} === 'true')}" width="100%" />
							</table:template>
						</table:Column>
						<table:Column width="10%" hAlign="Center">
							<Label text="{i18n&gt;viewSite.Edit}" />
							<table:template>
								<Button press="editSite" tooltip="{i18n&gt;viewSite.Edit}" type="Transparent" icon="sap-icon://edit" enabled="{=(${NEW_SITE} === 'false')}" iconDensityAware="false" />
							</table:template>
						</table:Column>
						<table:Column width="10%" hAlign="Center">
							<Label text="{i18n&gt;viewSite.Delete}" />
							<table:template>
								<Button press="deleteSite" tooltip="{i18n&gt;viewSite.Delete}" type="Reject" icon="sap-icon://delete" iconDensityAware="false" />
							</table:template>
						</table:Column>
					</table:columns>
				</table:Table>
			</u:ObjectPageSubSection>
		</u:ObjectPageSection>
		<u:footer>
			<Toolbar style="Clear" design="Transparent">
				<Button text="{i18n&gt;viewSite.refresh}" tooltip="{i18n&gt;viewSite.refresh}" press="getSite" icon="sap-icon://refresh" enabled="{= !${/viewSiteElements/editMode}}" />
				<Button text="{i18n&gt;viewSite.newSite}" tooltip="{i18n&gt;viewSite.newSite}" press="newSite" icon="sap-icon://add" />
				<ToolbarSpacer />
				<Button text="{i18n&gt;viewMainTile.undo}" tooltip="{i18n&gt;viewMainTile.undo}" press="getSite" icon="sap-icon://undo" type="Reject" enabled="{/viewSiteElements/editMode}" />
				<Button text="{i18n&gt;viewSite.save}" tooltip="{i18n&gt;viewSite.save}" press="saveNewSite" type="Accept" icon="sap-icon://save" enabled="{/viewSiteElements/editMode}" />
			</Toolbar>
		</u:footer>
	</u:ObjectPageLayout>
</mvc:View>