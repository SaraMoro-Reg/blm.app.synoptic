<?xml version="1.0" encoding="UTF-8"?>
<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:table="sap.ui.table" controllerName="master_data.controller.DC">
	<Dialog id="EditParamUomPopup" title="{i18n&gt;viewEditUdm.title}" stretch="true" contentHeight="20rem" contentWidth="70rem" horizontalScrolling="false" afterClose="closePopup">
		<content>
			<VBox width="100%" height="19rem" renderType="Bare">
				<HBox width="100%" height="75%" renderType="Bare">
					<HBox width="2%" height="100%" renderType="Bare" />
					<table:Table id="tabUom" rows="{path: '/tabParamUom'}" width="100%" selectionMode="Single" selectionBehavior="RowSelector" visibleRowCount="12" visibleRowCountMode="Interactive" rowSelectionChange="onSelectParamUom">
						<table:extension>
							<OverflowToolbar class="sapUiTinyMarginTopBottom" style="Clear">
								<SearchField id="searchFieldUom" width="28%" liveChange="handleSearchUom" />
								<ToolbarSpacer />
								<Button text="{i18n&gt;viewDC.addUom}" tooltip="{i18n&gt;viewDC.addUom}" press="addParUom" icon="sap-icon://add" type="Transparent" />
							</OverflowToolbar>
						</table:extension>
						<table:rowSettingsTemplate>
							<table:RowSettings highlight="{= ${DEL} === false ? ${EDIT} ? 'Warning' : 'None' : 'Error'}" />
						</table:rowSettingsTemplate>
						<table:columns>
							<table:Column width="auto" hAlign="Begin">
								<Label text="{i18n&gt;viewEditUdm.title}" />
								<table:template>
									<VBox>
										<Label text="{UOM}" visible="{= ${IS_USED} === true }" />
										<Input value="{UOM}" liveChange="onChangeParamUom" width="100%" visible="{= ${IS_USED} === false }" />
									</VBox>
								</table:template>
							</table:Column>
							<table:Column width="7%" hAlign="Center">
								<Label text="{i18n&gt;viewSite.Delete}" />
								<table:template>
									<Button press="deleteParamUom" tooltip="{i18n&gt;viewSite.Delete}" type="Reject" icon="sap-icon://delete" enabled="{= ${EDIT} === true || ${IS_USED} === false}" iconDensityAware="false" visible="{= ${IS_USED} === false }" />
								</table:template>
							</table:Column>
						</table:columns>
					</table:Table>
					<HBox width="2%" height="100%" renderType="Bare" />
				</HBox>
				<HBox width="100%" height="5%" renderType="Bare" />
			</VBox>
		</content>
		<buttons width="100%" height="10%" renderType="Bare" justifyContent="End">
			<Button width="10%" text="{i18n&gt;viewUplod.saveBtn}" press="confirmEditParamUom" type="Accept" visible="{/viewParamElements/editPopupParamUom}" />
			<Button width="10%" text="{i18n&gt;viewUplod.resetBtn}" press="refreshParameterUom" type="Reject" visible="{/viewParamElements/editPopupParamUom}" />
			<Button width="10%" text="{i18n&gt;viewLogistic.reset}" press="closePopup" type="Emphasized" visible="{= !${/viewParamElements/editPopupParamUom}}" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>