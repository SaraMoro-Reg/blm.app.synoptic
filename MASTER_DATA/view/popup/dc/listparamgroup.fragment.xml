<?xml version="1.0" encoding="UTF-8"?>
<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:table="sap.ui.table">
	<Dialog id="EditParamGroupPopup" title="{i18n&gt;viewDC.table.paramType}" stretch="true" contentHeight="20rem" contentWidth="70rem" horizontalScrolling="false" afterClose="closePopup">
		<content>
			<VBox width="100%" height="19rem" renderType="Bare">
				<HBox width="100%" height="75%" renderType="Bare">
					<HBox width="2%" height="100%" renderType="Bare" />
					<table:Table id="dlg_tabParType" rows="{path: '/tabParamGrp'}" width="100%" selectionMode="Single" selectionBehavior="RowSelector" visibleRowCount="12" visibleRowCountMode="Interactive" rowSelectionChange="onSelectParamGroup">
						<table:extension>
							<OverflowToolbar class="sapUiTinyMarginTopBottom" style="Clear">
								<SearchField id="searchFieldGrp" width="28%" liveChange="handleSearchGrp" />
								<ToolbarSpacer />
								<Button text="{i18n&gt;viewDC.addParType}" tooltip="{i18n&gt;viewDC.addParType}" press="addParType" icon="sap-icon://add" type="Transparent" />
							</OverflowToolbar>
						</table:extension>
						<table:rowSettingsTemplate>
							<table:RowSettings highlight="{= ${DEL} === false ? ${EDIT} ? 'Warning' : 'None' : 'Error'}" />
						</table:rowSettingsTemplate>
						<table:columns>
							<table:Column width="auto" hAlign="Begin">
								<Label text="{i18n&gt;viewDC.table.paramType}" />
								<table:template>
									<VBox>
										<Label text="{PARAM_GROUP}" visible="{= ${IS_USED} === true }" />
										<Input value="{PARAM_GROUP}" liveChange="onChangeParamGroup" width="100%" visible="{= ${IS_USED} === false }" />
									</VBox>
								</table:template>
							</table:Column>
							<table:Column width="7%" hAlign="Center">
								<Label text="{i18n&gt;viewSite.Delete}" />
								<table:template>
									<Button press="deleteParamGroup" tooltip="{i18n&gt;viewSite.Delete}" type="Reject" icon="sap-icon://delete" enabled="{= ${EDIT} === true || ${IS_USED} === false}" iconDensityAware="false" visible="{= ${IS_USED} === false }" />
								</table:template>
							</table:Column>
						</table:columns>
					</table:Table>
					<HBox width="2%" height="100%" renderType="Bare" />
				</HBox>
				<HBox width="100%" height="5%" renderType="Bare" />
			</VBox>
		</content>
		<buttons width="100%" height="10%" renderType="Bare" justifyContent="End">
			<Button width="10%" text="{i18n&gt;viewUplod.saveBtn}" press="confirmEditParamGroup" type="Accept" visible="{/viewParamElements/editPopupParamGrp}" />
			<Button width="10%" text="{i18n&gt;viewUplod.resetBtn}" press="refreshParameterGroupList" type="Reject" visible="{/viewParamElements/editPopupParamGrp}" />
			<Button width="10%" text="{i18n&gt;viewLogistic.reset}" press="closePopup" type="Emphasized" visible="{= !${/viewParamElements/editPopupParamGrp}}" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>