<?xml version="1.0" encoding="UTF-8"?>
<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:table="sap.ui.table">
	<Dialog title="{i18n&gt;viewPhase.phase}" stretch="true" horizontalScrolling="false" afterClose="onClosePhaseValueHelp" class="sapUiContentPadding">
		<content>
			<table:Table id="tabPopPhaseList" rows="{path: '/phaselist'}" width="100%" selectionMode="Single" rowSelectionChange="handleValueHelpSelect" visibleRowCountMode="Interactive" visibleRowCount="13">
				<table:extension>
					<OverflowToolbar style="Clear">
						<ComboBox id="comboPrex" width="20%" placeholder="{i18n&gt;viewPhase.prefixComboSel}" selectionChange="onChangePrex" items="{path: '/prefixlist',sorter: { path: 'PREFIXSEQ' }}" >
							<core:Item key="{PREFIXSEQ}" text="{PREFIXSEQ}" />
						</ComboBox>
						<ComboBox id="comboMainSeq" width="20%" placeholder="{i18n&gt;viewPhase.prefixMainSeqSel}" selectionChange="onChangeMain" items="{path: '/macrophaselist',sorter: { path: 'MAINSEQUENCE' }}" >
							<core:Item key="{MAINSEQUENCE}" text="{MAINSEQUENCE}" />
						</ComboBox>
						<ToolbarSpacer />
						<Select id="selectFilterType" selectedKey="SEQUENCE" autoAdjustWidth="true" change="onChangeFilterType" >
							<core:Item key="SEQUENCE" text="{i18n&gt;viewPhase.sequence}" />
							<core:Item key="OPERATIONDESCR" text="{i18n&gt;viewPhase.phaseDescr}" />
						</Select>
						<SearchField id="searchFieldParamDescr" width="28%" liveChange="handleSearchParamDescr" />
					</OverflowToolbar>
				</table:extension>
				<table:rowSettingsTemplate>
					<table:RowSettings highlight="None" />
				</table:rowSettingsTemplate>
				<table:columns>
					<!-- Current Version -->
					<table:Column width="5%" hAlign="Center">
						<Label text="{i18n&gt;viewPhase.currentVersion}" wrapping="true" />
						<table:template>
							<core:Icon src="sap-icon://accept" tooltip="{i18n&gt;viewPhase.currentVersion}" color="green" visible="{CURRENT_VERSION}"/>
						</table:template>
					</table:Column>
					<!-- Phase -->
					<table:Column width="20%" hAlign="Begin">
						<Label text="{i18n&gt;viewPhase.sequence}" wrapping="true" />
						<table:template>
							<ExpandableText text="{SEQUENCE}" maxCharacters="20" overflowMode="Popover" />
						</table:template>
					</table:Column>
					<!-- Version -->
					<table:Column width="5%" hAlign="Center">
						<Label text="{i18n&gt;viewPhase.phasevers}" wrapping="true" />
						<table:template>
							<Label text="{OP_CODE}" />
						</table:template>
					</table:Column>
					<!-- Phase Description -->
					<table:Column width="auto" hAlign="Begin">
						<Label text="{i18n&gt;viewPhase.phaseDescr}" wrapping="true" />
						<table:template>
							<ExpandableText text="{OPERATIONDESCR}" maxCharacters="40" overflowMode="Popover" />
						</table:template>
					</table:Column>					
					<!-- Macrophase -->
					<table:Column width="20%" hAlign="Begin">
						<Label text="{i18n&gt;viewPhase.macrophase}" wrapping="true" />
						<table:template>
							<ExpandableText text="{MAINSEQUENCE}" maxCharacters="20" overflowMode="Popover" />
						</table:template>
					</table:Column>
					<!-- Parallel -->
					<table:Column width="5%" hAlign="Center">
						<Label text="{i18n&gt;viewPhase.phaseparal}" wrapping="true" />
						<table:template>
							<core:Icon src="sap-icon://split" tooltip="{i18n&gt;viewPhase.phaseparal}" color="green" visible="{PARALLEL}"/>
						</table:template>
					</table:Column>					
				</table:columns>
			</table:Table>
		</content>
		<buttons>
			<Button text="{i18n&gt;viewUplod.resetBtn}" tooltip="{i18n&gt;viewUplod.resetBtn}" press="onClosePhaseValueHelp" type="Emphasized" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>