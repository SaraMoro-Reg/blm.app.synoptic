<?xml version="1.0" encoding="UTF-8"?>
<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:table="sap.ui.table" controllerName="master_data.controller.WorkCenter">
	<Dialog id="EditTypePopup" title="{i18n&gt;viewWkc.EditWorkCenterTypePopup}" contentHeight="20rem" contentWidth="70rem" horizontalScrolling="false" afterClose="closePopup">
		<content>
			<VBox width="100%" height="19rem" renderType="Bare">
				<HBox width="100%" height="5%" renderType="Bare" />
				<HBox width="100%" height="9%" alignItems="Center" renderType="Bare">
					<HBox width="5%" renderType="Bare" />				
					<HBox width="10%" renderType="Bare">
						<Label width="100%" text="{i18n&gt;viewWRK.EditPopType}:"  />
					</HBox>
					<HBox width="25%" renderType="Bare">
						<Input id="inputType" type="Text" enabled="false" />
					        <Input id="TypeId" type="Text" visible="false" />
					</HBox>
					<HBox width="60%" renderType="Bare" />
				</HBox>
				<HBox width="100%" height="5%" renderType="Bare" />
				<HBox width="100%" height="75%" renderType="Bare">
					<HBox width="2%" height="100%" renderType="Bare" />
					<table:Table id="tabWrkTypeDescr" rows="{path: '/tabDescrtype'}" width="96%" selectionMode="None" selectionBehavior="RowOnly" visibleRowCountMode="Auto">
						<table:rowSettingsTemplate>
							<table:RowSettings  highlight="{path: 'DEL', formatter: '.manageColor'}" />
						</table:rowSettingsTemplate>
						<table:columns>
							<table:Column width="15%" hAlign="Center" >
								<Label text="{i18n&gt;viewSite.Lang}" />
								<table:template>
									<ComboBox selectedKey="{LANG}" selectionChange="onChangeStatus" width="100%" valueState="None" maxWidth="100%" editable="{EDIT}">
										<items>
											<core:Item key="IT" text="{i18n&gt;viewSite.it}" />
											<core:Item key="EN" text="{i18n&gt;viewSite.en}" />
										</items>
									</ComboBox>
								</table:template>
							</table:Column>
							<table:Column width="auto" hAlign="Center" >
								<Label text="{i18n&gt;viewWRK.table.wrktypedescr}" />
								<table:template>
									<Input value="{WORKCENTERTYPE_DESC}" width="100%" editable="{EDIT}" />
								</table:template>
							</table:Column>
							<table:Column width="8%" hAlign="Center" >
								<Label text="{i18n&gt;viewSite.Delete}" />
								<table:template>
									<Button press="deleteWorkCenterTypeDescr" type="Transparent" icon="sap-icon://delete" iconDensityAware="false" />
								</table:template>
							</table:Column>
						</table:columns>
					</table:Table>
					<HBox width="2%" height="100%" renderType="Bare" />
				</HBox>
				<HBox width="100%" height="5%" alignItems="Center" renderType="Bare">
					<HBox width="83%" height="100%" renderType="Bare" />
					<HBox width="11%" height="100%" alignItems="Center"  renderType="Bare">
						<Button text="{i18n&gt;viewSite.newDescrSite}" press="newDescrType" icon="sap-icon://add" />
					</HBox>
					<HBox width="6%" height="100%" renderType="Bare" />
				</HBox>
			</VBox>
		</content>
		<buttons>
			<Button icon="sap-icon://undo" press="closePopup" class="halfSizeButton buttonRed" />
			<Button icon="sap-icon://accept" press="confirmEditType" class="halfSizeButton buttonGreen" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>