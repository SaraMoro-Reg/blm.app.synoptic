<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		title="{i18n&gt;viewMail.attach.selectattachPop}"
		liveChange="handleSearchAtt"
		confirm="handleValueHelpCloseAtt"
		cancel="handleValueHelpCloseAtt"		
		items="{
			path : '/attachlist',
			sorter : {
				path : 'OPERATIONMAIL',
				descending : false
			}
		}">
		<ColumnListItem selected="">
			<cells>
			          <Text text="{OPERATIONMAIL}" />
			        <Text text="{OPERATIONMAIL_ID}" />
				<core:Icon
					src="{ICON}"
					class="size1"
					color="green" >
					<core:layoutData>
						<FlexItemData growFactor="1" />
					</core:layoutData>
			</core:Icon>
			</cells>
		</ColumnListItem>
		<columns>
			<Column width="90%">
				<header>
					<Text text="{i18n&gt;viewMail.attach.nameassignment}" />
				</header>
			</Column>
			<Column  visible="false">
				<header>
					<Text text="" />
				</header>
			</Column>
			<Column width="10%">
				<header>
					<Text text="" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>