<?xml version="1.0" encoding="UTF-8"?>
<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:table="sap.ui.table" controllerName="master_data.controller.WorkCenter">
	<Dialog id="EditWrkDescPopup" title="{i18n&gt;viewPopup.table.desc}" stretch="true" contentHeight="20rem" contentWidth="70rem" horizontalScrolling="false" afterClose="closePopup">
		<content>
			<VBox width="100%" height="19rem" renderType="Bare">
				<HBox width="100%" height="75%" renderType="Bare">
					<HBox width="2%" height="100%" renderType="Bare" />
					<table:Table id="tabWrkDesc" rows="{path: '/tabDescrWrk'}" width="96%" selectionMode="None" selectionBehavior="RowOnly" visibleRowCountMode="Auto">
						<table:extension>
							<OverflowToolbar class="sapUiTinyMarginTopBottom" style="Clear">
								<Title text="{i18n&gt;viewWRKDesc.wrk}: {/wrkDetails/WORKCENTER}"/>
								<ToolbarSpacer />
								<Button text="{i18n&gt;viewPopupDesc.newDesc}" press="newDescrWrk" icon="sap-icon://add" type="Transparent" />
							</OverflowToolbar>
						</table:extension>
						<table:rowSettingsTemplate>
							<table:RowSettings highlight="{= ${DEL} === false ? ${EDIT} ? 'Warning' : 'None' : 'Error'}" />
						</table:rowSettingsTemplate>
						<table:columns>
							<table:Column width="15%" hAlign="Center" >
								<Label text="{i18n&gt;viewPopupDesc.lang}" />
								<table:template>
									<ComboBox selectedKey="{LANGUAGE}" width="100%" valueState="None" maxWidth="100%" editable="{=(${DEL} === false)? true : false}">
										<items>
											<core:Item key="IT" text="{i18n&gt;viewPopupDesc.it}" />
											<core:Item key="EN" text="{i18n&gt;viewPopupDesc.en}" />
										</items>
									</ComboBox>
								</table:template>
							</table:Column>
							<table:Column width="auto" hAlign="Center" >
								<Label text="{i18n&gt;viewWRKDesc.wrkDescr}" />
								<table:template>
									<TextArea value="{WORKCENTER_DESC}" liveChange="onChangeDescription" width="100%" editable="{=(${DEL} === false)? true : false}" maxLength="2000" />
								</table:template>
							</table:Column>
							<table:Column width="8%" hAlign="Center" >
								<Label text="{i18n&gt;viewPopupDesc.delete}" />
								<table:template>
									<Button press="deleteDescrWrk" type="Reject" icon="sap-icon://delete" iconDensityAware="false" />
								</table:template>
							</table:Column>
						</table:columns>
					</table:Table>
					<HBox width="2%" height="100%" renderType="Bare" />
				</HBox>
			</VBox>
		</content>
		<buttons width="100%" height="10%" renderType="Bare" justifyContent="End">
			<Button width="10%" text="{i18n&gt;viewUplod.saveBtn}" press="confirmEditWrkDescr" type="Accept"/>
			<Button width="10%" text="{i18n&gt;viewUplod.resetBtn}" press="closePopup" type="Reject"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>