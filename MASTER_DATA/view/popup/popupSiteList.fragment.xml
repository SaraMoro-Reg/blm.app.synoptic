<?xml version="1.0" encoding="UTF-8"?>
<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
	<TableSelectDialog contentWidth="40rem" contentHeight="50rem" multiSelect="true" growingThreshold = "100" title="{i18n&gt;viewSite.site}" liveChange="onSearchSite" confirm="confirmSiteAndCloneMainTile" cancel="closeSiteDialog" items="{/siteList}">
		<ColumnListItem vAlign="Middle">
			<cells>			
				<Text text="{SITE}" />		
				<Text text="{SITE_DESCR}" />						
			</cells>
		</ColumnListItem>
		<columns>	
			<Column>
				<header>
					<Text text="{i18n&gt;viewSite.site}" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="{i18n&gt;viewSite.SiteDescr}" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>	
</core:FragmentDefinition>	