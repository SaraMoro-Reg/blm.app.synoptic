				<HBox width="100%" height="9%" alignItems="Center" renderType="Bare">
					<HBox width="5%" renderType="Bare" />				
					<HBox width="25%" renderType="Bare">
						<Label width="100%" text="{i18n&gt;viewMail.template.test.label.mail}:" />
					</HBox>
					<HBox width="60%" renderType="Bare">
						<ComboBox id="email" selectedKey="" items="{path: '/usrlist',sorter: { path: 'NAME' }, templateShareable:true}" width="100%" valueState="None"  maxWidth="100%"   placeholder="{i18n&gt;viewMail.template.test.text.mail}">
							<core:Item key="{EMAIL}" text="{NAME}" />
						</ComboBox>
					</HBox>
					<HBox width="10%" renderType="Bare" />
				   </HBox>
			</VBox>
		</content>
		<buttons>
			<Button icon="sap-icon://undo" press="sendMaitestClose" class="halfSizeButton buttonRed" />
			<Button icon="sap-icon://paper-plane" press="sendMailtestSend" class="halfSizeButton buttonGreen" />
