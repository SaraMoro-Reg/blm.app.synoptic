					<HBox width="5%" renderType="Bare" />
				   </HBox>
				<HBox width="100%" height="9%" alignItems="Center" renderType="Bare">
					<HBox width="5%" renderType="Bare" />				
					<HBox width="25%" renderType="Bare">
						<Label width="100%" text="{i18n&gt;viewMail.template.test.label.slot}:" />
					</HBox>
					<HBox width="60%" renderType="Bare">
						<Input id="slot" type="Text"  placeholder="{i18n&gt;viewMail.template.test.text.slot}" />
					</HBox>
					<HBox width="10%" renderType="Bare" />
				   </HBox>
				<HBox width="100%" height="9%" alignItems="Center" renderType="Bare">
					<HBox width="5%" renderType="Bare" />				
					<HBox width="90%" renderType="Bare">
						<Label width="100%" text="" />
