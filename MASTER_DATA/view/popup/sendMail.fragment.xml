<?xml version="1.0" encoding="UTF-8"?>
<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:table="sap.ui.table" controllerName="master_data.controller.Mailing">
	<Dialog id="sendMailTestpopup" title="{i18n&gt;viewMail.template.sendtest}" contentHeight="20rem" contentWidth="70rem" horizontalScrolling="false" afterClose="closePopup">
		<content>
			<VBox width="100%" height="19rem" renderType="Bare">
				<HBox width="100%" height="9%" alignItems="Center" renderType="Bare">
					<HBox width="5%" renderType="Bare" />				
					<HBox width="90%" renderType="Bare">
						<Label width="100%" text="{i18n&gt;viewMail.template.test.label.title}:" />
					</HBox>
					<HBox width="5%" renderType="Bare" />
				   </HBox>
				<HBox width="100%" height="9%" alignItems="Center" renderType="Bare">
					<HBox width="5%" renderType="Bare" />				
					<HBox width="25%" renderType="Bare">
						<Label width="100%" text="{i18n&gt;viewMail.template.test.label.fase}:" />
					</HBox>
					<HBox width="60%" renderType="Bare">
						<Input id="fase" type="Text"  placeholder="{i18n&gt;viewMail.template.test.text.fase}" />
					</HBox>
					<HBox width="10%" renderType="Bare" />
				   </HBox>
				<HBox width="100%" height="9%" alignItems="Center" renderType="Bare">
					<HBox width="5%" renderType="Bare" />				
					<HBox width="90%" renderType="Bare">
