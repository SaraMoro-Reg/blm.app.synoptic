<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		noDataText="No Users Mail list found"
		title="{i18n&gt;viewMail.ListMailPop}"
		liveChange="handleSearchMail"
		confirm="handleValueHelpCloseMail"
		cancel="handleValueHelpCloseMail"		
		items="{
			path : '/mailist',
			sorter : {
				path : 'MailingList',
				descending : false
			}
		}">
		<ColumnListItem selected="">
			<cells>
			          <Text text="{MailingList}" />
			        <Text text="{MailingListId}" />
			        <Text text="{DEL}" />
				<core:Icon
					src="{ICON}"
					class="size1"
					color="{COLORDFT}" >
					<core:layoutData>
						<FlexItemData growFactor="1" />
					</core:layoutData>
			</core:Icon>
			</cells>
		</ColumnListItem>
		<columns>
			<Column width="90%">
				<header>
					<Text text="{i18n&gt;viewMail.maillist}" />
				</header>
			</Column>
			<Column  visible="false">
				<header>
					<Text text="" />
				</header>
			</Column>
			<Column  visible="false">
				<header>
					<Text text="" />
				</header>
			</Column>
			<Column width="10%">
				<header>
					<Text text="{i18n&gt;viewMail.inuse}" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>